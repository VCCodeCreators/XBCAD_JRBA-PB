@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }

        main {
            max-width: 800px;
            margin: 0 auto;
        }

        #title {
            color: #007bff;
        }

        .lead {
            font-size: 1.25em;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .section {
            margin-bottom: 40px;
        }
    </style>
</head>
<body onload="showMenuInstructions()">

    <main>
        <section class="section" aria-labelledby="aspnetTitle">
            <h1 id="title">Welcome to ASP.NET</h1>
            <p class="lead">Explore the power of ASP.NET, a versatile web framework for building dynamic websites and applications using HTML, CSS, and JavaScript.</p>
            <p><a href="#" class="btn btn-custom" onclick="showMenuInstructions()">Click on a menu item to start &raquo;</a></p>
        </section>

        <div class="row">
            <section class="col-md-4 section" aria-labelledby="gettingStartedTitle">
                <h2 id="gettingStartedTitle">Getting Started</h2>

                <p>
                    ASP.NET MVC provides a powerful, patterns-based way to build dynamic websites with clean separation of concerns and full control over markup.
                </p>
                <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
            </section>
            <section class="col-md-4 section" aria-labelledby="librariesTitle">
                <h2 id="librariesTitle">Explore Libraries</h2>
                <p>NuGet makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
                <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
            </section>
            <section class="col-md-4 section" aria-labelledby="hostingTitle">
                <h2 id="hostingTitle">Web Hosting</h2>
                <p>Discover web hosting options that offer the right features and pricing for your applications.</p>
                <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
            </section>
        </div>
    </main>

    <script>
        function showMenuInstructions() {
            alert("Click on a menu item in the navigation bar to explore more!");
        }
    </script>

</body>
</html>
