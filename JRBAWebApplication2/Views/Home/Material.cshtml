@{
    ViewBag.Title = "Settings";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
    }

    .materials-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .material-item {
        margin-bottom: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .material-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .material-description {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    .material-link {
        font-size: 16px;
        color: #007bff;
        text-decoration: none;
    }

        .material-link:hover {
            text-decoration: underline;
        }

    .material-category {
        font-size: 16px;
        font-weight: bold;
        color: #555;
    }

    .search-bar {
        margin-bottom: 20px;
    }

    .search-input {
        padding: 10px;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .filter-dropdown {
        width: 150px;
        margin-right: 10px;
    }

    .material-detail {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        display: none;
    }
</style>

<div class="materials-container">
    <h2>Educational Materials</h2>

    <!-- Search Bar and Filters -->
    <div class="row search-bar">
        <div class="col-md-8">
            <input type="text" class="form-control search-input" placeholder="Search...">
        </div>
        <div class="col-md-4">
            <select class="form-control filter-dropdown">
                <option value="">All Categories</option>
                <option value="category1">Category 1</option>
                <option value="category2">Category 2</option>
                <!-- Add more categories as needed -->
            </select>
            <button class="btn btn-primary">Filter</button>
        </div>
    </div>

    <!-- Material List -->
    <div class="material-item">
        <div class="material-title">Material Title 1</div>
        <div class="material-category">Category 1</div>
        <div class="material-description">Description of Material 1.</div>
        <a href="#" class="material-link">Download Material</a>
        <button class="btn btn-link">View Details</button>
    </div>

    <div class="material-item">
        <div class="material-title">Material Title 2</div>
        <div class="material-category">Category 2</div>
        <div class="material-description">Description of Material 2.</div>
        <a href="#" class="material-link">Download Material</a>
        <button class="btn btn-link">View Details</button>
    </div>

    <!-- Add more material items as needed -->
    <!-- Material Detail Modal -->
    <div class="material-detail">
        <h3>Material Title</h3>
        <div class="material-category">Category</div>
        <div class="material-description">Description of Material.</div>
        <a href="#" class="material-link">Download Material</a>
    </div>
</div>

<script>
    document.querySelectorAll('.btn-link').forEach(function (btn) {
        btn.addEventListener('click', function () {
            var detail = this.parentElement.querySelector('.material-detail');
            if (detail.style.display === 'block') {
                detail.style.display = 'none';
            } else {
                detail.style.display = 'block';
            }
        });
    });
</script>