@{
    ViewBag.Title = "Dashboard";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .dashboard-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-gap: 20px;
        margin: 0 auto;
        padding: 20px;
    }

    .dashboard-item {
        background: #F3F4F6;
        box-shadow: 0 4px 9px rgba(23, 26, 31, 0.19);
        border-radius: 12px;
        padding: 20px;
    }

        .dashboard-item h3 {
            color: #171A1F;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .dashboard-item p {
            color: #171A1F;
            font-size: 1rem;
            line-height: 1.6;
        }

        .dashboard-item .cta-button {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #171A1F;
            text-decoration: none;
            font-weight: 700;
            transition: opacity 0.2s;
        }

            .dashboard-item .cta-button:hover {
                opacity: 0.8;
            }

        .dashboard-item img {
            max-width: 100%;
            height: auto;
            border-radius: 12px;
            margin-top: 10px;
            box-shadow: 0 4px 9px rgba(23, 26, 31, 0.19);
        }

    .timestamp {
        color: #9095A1;
        font-size: 0.8rem;
        margin-top: 10px;
    }

    .divider {
        border-top: 1px solid #9095A1;
        margin: 20px 0;
    }

    .dashboard-item.large-chart {
        grid-column: span 2; /* Make the item span 2 columns */
    }

    .chart-container {
        max-width: 100%; /* Allow the chart to take full width */
        margin: 0 auto;
    }
</style>

<h2>Dashboard</h2>

<div class="dashboard-container">
    <div class="dashboard-item">
        <h3>Get Started</h3>
        <p>Finish setting up your security settings.</p>
        <a href="#" class="cta-button">Get Started <span>&rarr;</span></a>
    </div>

    <div class="dashboard-item">
        <h3>Educational Material</h3>
        <p>Check out all our educational content.</p>
        <a href="#" class="cta-button">Get Started <span>&rarr;</span></a>
    </div>

    <div class="dashboard-item">
        <h3>Time</h3>
        <p>Thursday September 4, 20:43</p>
    </div>

    <div class="dashboard-item">
        <h3>Social Feed</h3>
        <!-- Add your social feed content here -->
    </div>

    <div class="dashboard-item">
        <h3>More Content</h3>
        <!-- Add more content here -->
    </div>
    <div class="dashboard-item large-chart">
        <h3>Charts</h3>

        <!-- Chart 1: Bar Chart -->
        <div class="chart-container">
            <canvas id="barChart"></canvas>
        </div>

        <!-- Chart 2: Line Chart -->
        <div class="chart-container">
            <canvas id="lineChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Dummy data for the charts
    const barChartData = {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
            label: 'Calculations Made',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    };

    const lineChartData = {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
            label: 'Permits Issued',
            data: [65, 59, 80, 81, 56, 55],
            fill: false,
            borderColor: 'rgb(75, 192, 192)',
            tension: 0.1
        }]
    };

    // Render the charts
    new Chart(document.getElementById('barChart').getContext('2d'), {
        type: 'bar',
        data: barChartData,
        options: {
            scales: {
                y: {beginAtZero: true}
            }
        }
    });

    new Chart(document.getElementById('lineChart').getContext('2d'), {
        type: 'line',
        data: lineChartData,
        options: {
            scales: {
                y: {beginAtZero: true}
            }
        }
    });
</script>