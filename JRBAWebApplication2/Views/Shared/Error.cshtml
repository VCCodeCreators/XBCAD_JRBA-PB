@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 80px auto;
            text-align: center;
        }

        .text-danger {
            color: #dc3545;
        }

        h1 {
            font-size: 2.5em;
        }

        h2 {
            font-size: 1.8em;
        }

        p {
            font-size: 1.2em;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-danger">Oops! Something went wrong.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
        <p>We're sorry for the inconvenience. The error details are as follows:</p>

        <div style="text-align: left; margin-top: 20px;">
            <p><strong>Error:</strong> @Model.Exception.Message</p>
            <p><strong>Controller:</strong> @Model.ControllerName</p>
            <p><strong>Action:</strong> @Model.ActionName</p>
        </div>

        <p>If the issue persists, please contact our support team.</p>
    </div>
</body>
</html>
