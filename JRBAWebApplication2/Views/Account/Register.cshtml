@model JRBAWebApplication2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<style>
    .register-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #fff;
    }

    .background-image {
        width: 50%;
        height: 100%;
        object-fit: cover;
        border-radius: 12px 0 0 12px;
    }

    .form-card {
        width: 50%;
        height: 70%;
        position: relative;
        background-color: #fff;
        border-radius: 0 12px 12px 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        color: #424856;
        font-size: 14px;
        font-weight: 700;
    }

    .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    .submit-button {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background-color: #025034;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

    .form-footer {
        text-align: center;
        margin-top: 20px;
    }

    .logo-image {
        width: 189px;
        height: 106px;
        border-radius: 12px;
        position: absolute;
        top: 20px;
        right: 20px;
    }
</style>

<div class="register-container">
    <img class="background-image" src="~/Images/RegPic.jpg" alt="Background Image" />

    <div class="form-card">
        <div class="form-group">
            <label class="form-label" for="FirstName">First name</label>
            <input type="text" id="FirstName" name="FirstName" class="form-input" placeholder="Input first name" />
        </div>

        <div class="form-group">
            <label class="form-label" for="LastName">Last name</label>
            <input type="text" id="LastName" name="LastName" class="form-input" placeholder="Input last name" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Email">Email</label>
            <input type="email" id="Email" name="Email" class="form-input" placeholder="example.email@gmail.com" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Password">Password</label>
            <input type="password" id="Password" name="Password" class="form-input" placeholder="Enter at least 8+ characters" />
        </div>

        <div class="form-group">
            <label class="form-label" for="ConfirmPassword">Confirm Password</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-input" placeholder="Re-enter your password" />
        </div>

        <button type="submit" class="submit-button">Sign up</button>

        <div class="form-footer">
            Already have an account? <a href="/Login">Log in</a>
        </div>
    </div>

    <img class="logo-image" src="~/Images/JRBA-LOGO.png" alt="Logo Image" />
</div>
