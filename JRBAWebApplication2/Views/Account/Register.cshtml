@model JRBAWebApplication2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<div style="width: 1440px; height: 900px; position: relative; background: white; box-shadow: 0px 3px 6px rgba(18, 15, 40, 0.12)">
    <div style="width: 538px; height: 591px; left: 835px; top: 188px; position: absolute; background: white; border-radius: 12px; overflow: hidden">
        <div style="left: 211px; top: 24px; position: absolute; color: #171A1F; font-size: 32px; font-family: Encode Sans; font-weight: 400; line-height: 48px; word-wrap: break-word">Sign up</div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div style="height: 59px; padding-bottom: 1px; padding-right: 1px; left: 28px; top: 92px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: center; align-items: flex-start; gap: 1px; display: inline-flex">
                <div style="color: #424856; font-size: 14px; font-family: Encode Sans; font-weight: 700; line-height: 22px; word-wrap: break-word; align-self: flex-start">First name</div>
                <div style="align-self: flex-start; height: 35px; padding-top: 7px; padding-bottom: 6px; padding-left: 0px; padding-right: 133px; border-radius: 12px; justify-content: flex-start; align-items: center; display: inline-flex">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Input first name", Style = "background: #F3F4F6" })
                </div>
            </div>



            <div style="height: 59px; padding-bottom: 1px; padding-right: 1px; left: 279px; top: 92px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: center; align-items: flex-start; gap: 1px; display: inline-flex">
                <div style="color: #424856; font-size: 14px; font-family: Encode Sans; font-weight: 700; line-height: 22px; word-wrap: break-word">Last name</div>
                <div style="align-self: flex-start; height: 35px; padding-top: 7px; padding-bottom: 6px; padding-left: 0px; padding-right: 135px; border-radius: 12px; justify-content: flex-start; align-items: center; display: inline-flex">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Input last name", style = "width:250px;height:40px;background: #F3F4F6" })
                </div>
            </div>



            <div style="height: 59px; padding-bottom: 1px; padding-right: 1px; left: 28px; top: 171px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: center; align-items: flex-start; gap: 1px; display: inline-flex">
                <div style="color: #424856; font-size: 14px; font-family: Encode Sans; font-weight: 700; line-height: 22px; word-wrap: break-word">Email</div>
                <div style="align-self: stretch; height: 35px; padding-top: 7px; padding-bottom: 6px; padding-left: 0px; padding-right: 327px; border-radius: 12px; justify-content: flex-start; align-items: center; display: inline-flex">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example.email@gmail.com", style = "width 400px; height:40px; background: #F3F4F6" })
                </div>
            </div>

            <div style="height: 59px; padding-bottom: 1px; padding-right: 1px; left: 28px; top: 250px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: center; align-items: flex-start; gap: 1px; display: inline-flex">
                <div style="color: #424856; font-size: 14px; font-family: Encode Sans; font-weight: 700; line-height: 22px; word-wrap: break-word">Password</div>
                <div style="align-self: stretch; height: 35px; padding-top: 7px; padding-bottom: 6px; padding-left: 0px; padding-right: 11px; border-radius: 12px; justify-content: center; align-items: center; gap: 296px; display: inline-flex">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter at least 8+ characters", style = "width 400px; height:40px; background: #F3F4F6" })
                    <div style="width: 16px; height: 16px; position: relative; flex-direction: column; justify-content: flex-start; align-items: flex-start; display: flex">
                        <div style="width: 11.20px; height: 11.20px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 12px; height: 8.80px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 2.40px; height: 2.40px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 2.40px; height: 2.40px; border: 0.80px #171A1F solid"></div>
                    </div>
                </div>
            </div>

            <div style="height: 59px; padding-bottom: 1px; padding-right: 1px; left: 28px; top: 350px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: center; align-items: flex-start; gap: 1px; display: inline-flex">
                <div style="color: #424856; font-size: 14px; font-family: Encode Sans; font-weight: 700; line-height: 22px; word-wrap: break-word">Confirm Password</div>
                <div style="align-self: stretch; height: 35px; padding-top: 7px; padding-bottom: 6px; padding-left: 12px; padding-right: 11px; border-radius: 12px; justify-content: center; align-items: center; gap: 296px; display: inline-flex">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Re-enter your password", style = "width 400px; height:40px; background: #F3F4F6" })
                    <div style="width: 16px; height: 16px; position: relative; flex-direction: column; justify-content: flex-start; align-items: flex-start; display: flex">
                        <div style="width: 11.20px; height: 11.20px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 12px; height: 8.80px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 2.40px; height: 2.40px; border: 0.80px #171A1F solid"></div>
                        <div style="width: 2.40px; height: 2.40px; border: 0.80px #171A1F solid"></div>
                    </div>
                </div>
            </div>


            <div >
                <input type="submit" value="Sign up" class="btn btn-outline-dark" style="width: 482px; padding-top: 9px; padding-bottom: 9px; padding-left: 215px; padding-right: 222px; left: 28px; top: 371px; position: absolute; background: #025034; border-radius: 12px; overflow: hidden; justify-content: flex-start; align-items: center; display: inline-flex" />
            </div>
        }

        <div style="left: 166px; top: 435px; position: absolute; text-align: center">
            <span style="color: #171A1F; font-size: 14px; font-family: Encode Sans; font-weight: 400; line-height: 22px; word-wrap: break-word">Already have an account? </span>
            <a href="/Login"> <span style="color: #025034; font-size: 14px; font-family: Encode Sans; font-weight: 400; line-height: 22px; word-wrap: break-word">Log in</span> </a>
        </div>

        <div style="width: 36px; height: 20px; left: 28px; top: 330px; position: absolute; background: rgba(0, 0, 0, 0); flex-direction: column; justify-content: flex-start; align-items: flex-start; display: flex">
            <div></div>
            <div style="width: 12px; height: 12px; background: #025034; border-radius: 3px"></div>
            <div style="width: 8px; height: 8px; position: relative">
                <div style="width: 5.60px; height: 3.80px; left: 1.20px; top: 2px; position: absolute; border: 0.48px #E9FEF7 solid"></div>
            </div>
        </div>

        <div style="left: 259px; top: 477px; position: absolute; color: #565D6D; font-size: 14px; font-family: Encode Sans; font-weight: 400; line-height: 22px; word-wrap: break-word">OR</div>
        <div style="width: 219px; height: 0px; left: 28px; top: 488px; position: absolute; border: 1px #DEE1E6 solid"></div>
        <div style="width: 219px; height: 0px; left: 291px; top: 488px; position: absolute; border: 1px #DEE1E6 solid"></div>
    </div>
    <img style="width: 764px; height: 900px; left: 0px; top: 0px; position: absolute; border-radius: 12px" src="https://via.placeholder.com/764x900" />
    <img style="width: 189px; height: 106px; left: 1208px; top: 41px; position: absolute; border-radius: 12px" src="https://via.placeholder.com/189x106" />
</div>
