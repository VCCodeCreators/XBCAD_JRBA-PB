@model JRBAWebApplication2.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="loginStyles.css">
    <title>Login Page</title>
</head>
<body>
    <div class="container">
        <img class="background-image" src="https://via.placeholder.com/747x903" alt="Background Image">
        <div class="login-box">
            <div class="input-group">
                <div class="input-label">Email</div>
                <div class="input-field">
                    <div class="input-icon">
                        <div class="icon-line"></div>
                        <div class="icon-line"></div>
                    </div>
                    <div class="input-text">Enter your email</div>
                </div>
            </div>
            <div class="input-group">
                <div class="input-label">Password</div>
                <div class="input-field password-field">
                    <div class="input-text">Enter your password</div>
                    <div class="password-icon">
                        <div class="icon-line"></div>
                        <div class="icon-line"></div>
                        <div class="icon-line"></div>
                        <div class="icon-line"></div>
                    </div>
                </div>
            </div>
            <button class="sign-in-button">Sign in</button>
            <div class="sign-up-link">
                <span>Don't have an account? </span>
                <span class="sign-up">Sign up</span>
            </div>
            <div class="remember-me">
                <div class="remember-text">Remember me</div>
                <div class="checkbox"></div>
            </div>
            <div class="forgot-password">Forgot password?</div>
            <div class="or-divider">
                <div class="divider-line"></div>
                <div class="or-text">OR</div>
                <div class="divider-line"></div>
            </div>
            <button class="social-button" style="background-color: #171A1F;">
                <div class="social-icon">
                    <div class="icon-line"></div>
                    <div class="icon-line"></div>
                </div>
            </button>
            <button class="social-button" style="background-color: #455EA9;">
                <div class="social-icon">
                    <div class="icon-line"></div>
                </div>
            </button>
            <button class="social-button" style="background-color: #C71610;">
                <div class="social-icon">
                    <div class="icon-line"></div>
                </div>
            </button>
        </div>
        <img class="logo" src="https://via.placeholder.com/189x106" alt="Logo">
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}